{
  "name": "js-testing",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "run:test": "node --require ./setup-global ./src/simple.test",
    "run:test:jest": "npx jest",
    "build": "babel src --extensions .js,.ts,.tsx --out-dir dist",
    "lint": "eslint --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx)\"",
    "format:fix": "yarn format --write",
    "format:check": "yarn format --list-different",
    "type:check": "tsc",
    "validate": "yarn type:check && yarn format:check && yarn lint && yarn build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "5.0.9",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "echo 'RUNNING HOOK!'"
    }
  }
}
